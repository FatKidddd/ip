<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<fx:root alignment="TOP_RIGHT"
         maxHeight="1.7976931348623157E308"
         maxWidth="1.7976931348623157E308"
         prefWidth="400.0"
         spacing="12.0"
         style="-fx-padding: 5;"
         type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <Label fx:id="dialog" 
           text="Label" 
           wrapText="true" 
           minHeight="-Infinity"
           maxWidth="300.0"
           style="-fx-background-color: #e3f2fd; -fx-background-radius: 15; -fx-padding: 12; -fx-font-size: 14px;"/>
    <ImageView fx:id="displayPicture" 
               fitHeight="80.0" 
               fitWidth="80.0" 
               pickOnBounds="true" 
               preserveRatio="true"
               style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 2, 2);" />
  </children>
</fx:root>