<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="450.0"
            style="-fx-background-color: #f5f5f5;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tinman.MainWindow">
    <children>
        <TextField fx:id="userInput"
                   layoutY="558.0"
                   onAction="#handleUserInput"
                   prefHeight="41.0"
                   prefWidth="365.0"
                   promptText="Type your message here..."
                   style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-padding: 10;"
                   AnchorPane.bottomAnchor="1.0"
                   AnchorPane.leftAnchor="1.0" />
        <Button fx:id="sendButton"
                layoutX="365.0"
                layoutY="558.0"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="41.0"
                prefWidth="60.0"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 15; -fx-font-weight: bold;"
                text="Send"
                AnchorPane.bottomAnchor="1.0"
                AnchorPane.rightAnchor="1.0" />
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    prefHeight="535.0"
                    prefWidth="435.0"
                    style="-fx-background-color: transparent;"
                    fitToWidth="true"
                    AnchorPane.topAnchor="1.0">
            <content>
                <VBox fx:id="dialogContainer"
                      prefWidth="388.0"
                      spacing="15.0"
                      style="-fx-padding: 15; -fx-background-color: transparent;" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>